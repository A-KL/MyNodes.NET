@using MyNetSensors.Gateways
@model IEnumerable<MyNetSensors.Gateways.Node>

@{
    ViewBag.Title = "History";
}

<h2>History</h2>

<p>
    < @Html.ActionLink("Control Nodes", "Control", "Gateway")
</p>
<hr />

<div style="padding-left: 20px">
    @foreach (Node node in Model)
    {
        <h4>@node.GetSimpleName1()</h4>
        <div style="padding-left: 20px">
            @foreach (Sensor sensor in node.sensors)
            {
            @Html.ActionLink(sensor.GetSimpleName1(), "Chart", new { id = sensor.nodeId, id2 = sensor.sensorId })
            <br />
            }
        </div>
    }
</div>