        <div class="panel-heading" id="nodeTitle">
            Node title
        </div>
        <div class="panel-body">
            <span id="nodeBody">Node body</span>
            <br />
            <ul class="list-group" id="sensorsContainer"></ul>
        </div>
    </div>
</div>

@section styles
{
    @Styles.Render("~/Content/noty")
}

@section scripts
{
    @Scripts.Render("~/bundles/signalr")
