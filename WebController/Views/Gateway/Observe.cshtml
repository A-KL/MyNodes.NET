@{
    ViewBag.Title = "Observe Nodes";
}

<h2>Observe Nodes</h2>

<div class="row" id="nodesContainer" style="display: none;">
</div>

<div class="col-xs-6 col-sm-4 col-md-3" id="nodeTemplate" style="display: none;">
